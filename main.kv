#:kivy 2.1.0

<MyRoot>:
    # Link the object with the uid "random_label" to "random_label" from the "main.py"
    hidden_word: hidden_word
    guess_inpt: guess_inpt
    # The BoxLayout inside the "MyRoot" class will be vertically oriented
    # and have two labels and one button
    # This format avoid the declaration inside the python file
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Hanged-man game"
            font_size: 30
            color: 0, 0.62, 0.96

        Label:
            id: hidden_word
            text: "_"
            font_size: 30

        Button:
            id: start_game_button
            text: "Start game"
            font_size: 15
            # Event managing
            on_press: root.ask_user_name()

        TextInput:
            id: guess_inpt

        Button:
            text: "Submit"
            font_size: 15
            # Event managing
            on_press: root.user_input(guess_inpt)