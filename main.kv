<MyRoot>:
    # Link the object with the uid "random_label" to "random_label" from the "main.py"
    random_label: random_label
    # The BoxLayout inside the "MyRoot" class will be vertically oriented
    # and have two labels and one button
    # This format avoid the declaration inside the python file
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Test Kivy package"
            font_size: 30
            color: 0, 0.62, 0.96

        Label:
            id: random_label
            text: "_"
            font_size: 30

        Button:
            text: "Generate random number"
            font_size: 15
            # Event managing
            on_press: root.generate_number()